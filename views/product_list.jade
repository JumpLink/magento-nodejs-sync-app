h1 Product List
table.table.table-bordered
  thead
    tr
      th.sort-header Action
      include product_thead
      th.sort-header Category IDs        
  tbody
    each product, i in products
      tr
        td 
          .btn-group
            button.btn.btn-info.dropdown-toggle(data-toggle="dropdown")
              i.icon-info-sign.icon-white
              span.caret  
            ul.dropdown-menu
              li: a(href="/#{magento_shop.url}/product/info_compare#{shop_param}&sku=#{product.sku}", target="_top") Info with compare
              li: a(href="/#{magento_shop.url}/product/info_with_image/#{product.product_id}#{shop_param}", target="_top") Info with Image
              li: a(href="/#{magento_shop.url}/product/info/#{product.product_id}#{shop_param}", target="_top") Info
              li.divider
              li: a(href="/#{magento_shop.url}/product/new/#{product.product_id}#{shop_param}", target="_top") New
              li: a(href="/#{magento_shop.url}/product/update/#{product.product_id}#{shop_param}", target="_top") Update
              li: a(href="/#{magento_shop.url}/product/sync/#{product.product_id}#{shop_param}", target="_top") Sync
              li.divider
              li: a(href="/#{magento_shop.url}/product/delete/#{product.product_id}#{shop_param}", target="_top") Delete
              li: a(href="#productDeleteModal", data-toggle="modal", target="_top") Delete Modal
        include product_tbody
        td
          each category_id in product.category_ids
            a(href="/#{magento_shop.url}/category/products/#{category_id}#{shop_param}", target="_top")
              | #{category_id},